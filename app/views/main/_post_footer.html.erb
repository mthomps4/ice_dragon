<footer class="border-t pt-4 mt-8">
  <% if post.tags.any? %>
    <h3 class="font-semibold my-2">Tags</h3>
    <div class="flex flex-wrap gap-2">
      <% @post.tags.each do |tag| %>
        <%= link_to tag.name, blog_path(q: { tags_id_eq: tag.id }), class: "pill" %>
      <% end %>
    </div>
  <% end %>
  <% if post.collections.any? %>
    <h3 class="font-semibold my-2">Related Posts</h3>
    <ul class="list-disc list-inside text-sm">
      <% post.collections.each do |collection| %>
        <h3 class="font-semibold my-2"><%= collection.name %></h3>
        <% collection.posts.each do |related_post| %>
          <li>
            <%= link_to related_post.title, post_path(related_post.slug), class: "text-green-700 dark:text-green-400 underline italic" %>
          </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</footer>