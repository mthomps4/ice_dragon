<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col gap-4 lg:flex-row">
    <article class="rounded-lg flex-1">
      <div class="px-4 py-5 sm:px-6">
        <h1 class="text-3xl font-bold">Digital Forge</h1>
        <p class="mt-2 text-sm">Software development, code snippets, and other digital projects</p>
      </div>
      <%= render "shared/search_modal", show_full_bar: true %>
      <div class="px-4 py-5 sm:px-6">
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <% @posts.each do |post| %>
            <%= link_to post_path(post.slug) do %>
              <div class="rounded-lg drop-shadow-lg p-4 bg-white dark:text-white dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-900 group">
                <%= image_tag post.featured_image, class: "w-full h-auto aspect-video rounded-lg mb-6", alt: post.featured_alt_text %>
                <div class="flex justify-between items-center">
                  <h2 class="text-xl font-semibold text-slate-800 dark:text-slate-200 dark:group-hover:text-green-400"><%= post.title %></h2>
                  <time class="text-sm text-slate-700 dark:text-slate-300 " datetime="<%= post.published_on.strftime('%Y-%m-%d') %>">
                    <%= post.published_on.strftime('%B %d, %Y') %>
                  </time>
                </div>
                <p class="mt-3 text-slate-700 dark:text-slate-300"><%= truncate(post.description, length: 150) %></p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="px-4 py-5 sm:px-6">
        <%= paginate @posts %>
        <%= page_entries_info @posts, entry_name: "post" %>
      </div>
    </article>
  </div>
</div>
