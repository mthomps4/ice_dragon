<div class="container mx-auto px-4 py-8">
  <div class="rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-3xl font-bold">Digital Forge</h1>
      <p class="mt-2 text-sm">Software development, code snippets, and other digital projects</p>
    </div>
    <div class="px-4 py-5 sm:px-6">
      <%= search_form_for @q, url: blog_path do |f| %>
        <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-2">
          <%= f.search_field :title_or_description_or_body_cont,
            placeholder: "Search posts...",
            class: "w-full rounded-md focus:border-green-500 focus:ring-green-500 text-sm text-black" %>
          <%= f.select :tags_id_eq,
              Tag.all.map { |tag| [tag.name, tag.id] },
              { include_blank: 'Select Tags' },
              class: "w-full sm:w-auto rounded-md focus:border-green-500 focus:ring-green-500 text-sm text-black" %>
          <%= f.select :collections_id_eq,
              Collection.all.map { |collection| [collection.name, collection.id] },
              { include_blank: 'Select Collections' },
              class: "w-full sm:w-auto rounded-md focus:border-green-500 focus:ring-green-500 text-sm text-black" %>
          <%= f.submit "Search",
              class: "w-full sm:w-auto px-4 py-2 rounded-md focus:border-green-500 focus:ring-green-500 text-sm bg-green-600 text-white hover:bg-green-700" %>
          <%= link_to "Reset", blog_path,
              class: "w-full sm:w-auto px-4 py-2 text-center rounded-md focus:border-green-500 focus:ring-green-500 text-sm hover:text-green-300 hover:border-green-300 border-[1px] border-green-500" %>
        </div>
      <% end %>
    </div>
    <div class="px-4 py-5 sm:px-6">
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @posts.each do |post| %>
          <%= link_to post_path(post.slug) do %>
            <div class="rounded-lg drop-shadow-lg p-4 bg-white dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-900 group">
              <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-200 group-hover:text-green-400"><%= post.title %></h2>
                <time class="text-sm text-gray-600 dark:text-gray-400 group-hover:text-green-400" datetime="<%= post.published_on.strftime('%Y-%m-%d') %>">
                  <%= post.published_on.strftime('%B %d, %Y') %>
                </time>
              </div>
              <p class="mt-3 text-gray-700 dark:text-gray-300"><%= truncate(post.description, length: 150) %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="px-4 py-5 sm:px-6">
      <%= paginate @posts %>
      <%= page_entries_info @posts, entry_name: "post" %>
    </div>
  </div>
</div>
