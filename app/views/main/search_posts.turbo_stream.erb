<%= turbo_stream.update "search-results" do %>
  <% if @results.any? %>
    <div class="flex flex-col gap-2 my-2 dark:text-white">
      <% @results.each do |result| %>
        <%= link_to post_path(result.slug), data: { turbo_frame: "_top" } do %>
          <div class="flex items-center gap-2 border-[1px] border-slate-300 rounded-md p-2 hover:bg-slate-100">
            <p>Image here...</p>
            <div>
              <h3 class="text-lg font-bold"><%= result.title %></h3>
              <p class="text-sm"><%= result.description %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No results found for "<%= @search_param %>"</p>
  <% end %>
  <%= render "shared/tags", tags: @tags %>
  <%= render "shared/collections", collections: @collections %>
<% end %>