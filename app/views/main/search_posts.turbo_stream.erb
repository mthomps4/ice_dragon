<%= turbo_stream.update @turbo_frame_target do %>
  <% if @results.any? %>
    <div class="flex flex-col gap-2 my-2 dark:text-white">
      <% @results.each do |result| %>
        <%= link_to post_path(result.slug), data: { turbo_frame: "_top" } do %>
          <div class="flex items-center gap-2 border-[1px] border-slate-300 rounded-md p-2 hover:bg-slate-100">
            <%= image_tag result.featured_image, class: "w-16 aspect-video object-cover rounded-md" %>
            <div>
              <h3 class="text-md md:text-lg font-bold"><%= result.title %></h3>
              <p class="text-sm md:text-base"><%= result.description %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No results found for "<%= @search_param %>"</p>
  <% end %>
<% end %>