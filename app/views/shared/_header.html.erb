<header class="bg-gray-800 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "text-white font-bold text-xl" do %>
          Matthew Thompson
        <% end %>
      </div>
      <nav class="flex items-center gap-6 text-gray-300 hover:text-white font-medium">
        <%= link_to "About", root_path, class: "text-gray-300 hover:text-white" %>
        <%= link_to "Blog", blog_path, class: "text-gray-300 hover:text-white" %>
        <% content_for :modal_cta do %>
          <div class="text-gray-300 hover:text-white cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </div>
        <% end %>
        <%= render "shared/modal" do %>
          <div class="text-black dark:text-white">
            <h3>Search Posts</h3>
            <input type="text" id="search-input" placeholder="Search..." data-controller="search" data-action="input->search#search" data-search-url-value="<%= search_posts_path %>" autofocus />
            <%= turbo_frame_tag "search-results" do %>
              <p>Type to search...</p>
              <%= render "shared/tags", tags: @tags %>
              <%= render "shared/collections", collections: @collections %>
            <% end %>
          </div>
        <% end %>
        <div data-controller="dark-mode">
          <button
          id="dark-mode-toggle"
          type="button"
          title="Toggle dark mode"
          data-dark-mode-target="themeToggle"
          data-action="click->dark-mode#toggleTheme"
            >
            <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            class="size-6"
            fill="currentColor"
            data-dark-mode-target="darkIcon"
          >
              <path fill-rule="evenodd" d="M7.455 2.004a.75.75 0 01.26.77 7 7 0 009.958 7.967.75.75 0 011.067.853A8.5 8.5 0 116.647 1.921a.75.75 0 01.808.083z" clip-rule="evenodd" />
            </svg>
            <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            class="size-6 hidden"
            fill="currentColor"
            data-dark-mode-target="lightIcon"
          >
              <path d="M10 2a.75.75 0 01.75.75v1.5a.75.75 0 01-1.5 0v-1.5A.75.75 0 0110 2zM10 15a.75.75 0 01.75.75v1.5a.75.75 0 01-1.5 0v-1.5A.75.75 0 0110 15zM10 7a3 3 0 100 6 3 3 0 000-6zM15.657 5.404a.75.75 0 10-1.06-1.06l-1.061 1.06a.75.75 0 001.06 1.06l1.06-1.06zM6.464 14.596a.75.75 0 10-1.06-1.06l-1.06 1.06a.75.75 0 001.06 1.06l1.06-1.06zM18 10a.75.75 0 01-.75.75h-1.5a.75.75 0 010-1.5h1.5A.75.75 0 0118 10zM5 10a.75.75 0 01-.75.75h-1.5a.75.75 0 010-1.5h1.5A.75.75 0 015 10zM14.596 15.657a.75.75 0 001.06-1.06l-1.06-1.061a.75.75 0 10-1.06 1.06l1.06 1.06zM5.404 6.464a.75.75 0 001.06-1.06l-1.06-1.06a.75.75 0 10-1.061 1.06l1.06 1.06z" />
            </svg>
          </button>
        </div>
      </nav>
    </div>
  </div>
</header>