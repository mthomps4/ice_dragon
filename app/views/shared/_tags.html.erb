<div class="mt-6">
  <h2 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Tags</h2>
  <div class="mt-2 flex flex-wrap gap-2">
    <% @tags.each do |tag| %>
      <%= link_to blog_path(q: { tags_id_eq: tag.id }), data: { turbo_frame: "_top" }, class: "px-3 py-2 text-sm rounded-md hover:bg-gray-100 dark:hover:bg-gray-700" do %>
        #<%= tag.name %>
      <% end %>
    <% end %>
  </div>
</div>