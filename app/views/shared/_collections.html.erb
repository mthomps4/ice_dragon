<div class="flex flex-col gap-2 my-2 dark:text-white">
  <h2 class="text-lg font-bold">Collections</h2>
  <% @collections.each do |collection| %>
    <%= link_to blog_path(q: { collections_id_eq: collection.id }), data: { turbo_frame: "_top" } do %>
      <%= collection.name %>
    <% end %>
  <% end %>
</div>