<div class="mt-6">
  <h2 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">Collections</h2>
  <div class="mt-2 grid grid-cols-2 gap-2">
    <% @collections.each do |collection| %>
      <%= link_to blog_path(q: { collections_id_eq: collection.id }), data: { turbo_frame: "_top" }, class: "px-3 py-2 text-sm rounded-md hover:bg-gray-100 dark:hover:bg-gray-700" do %>
        <%= collection.name %>
      <% end %>
    <% end %>
  </div>
</div>